{
    "env": {
        "browser": true,
        "es2021": true,
        "es6": true,
        "jest/globals": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "google"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "arrow-parens": "off",
        "comma-dangle": [2, "never"],
        "require-jsdoc": "off",
        "semi": [2, "never"],
        "no-debugger": "warn",
        "no-unused-vars": "warn",
        "no-unreachable": "warn",
        "max-len": "warn",
        "operator-linebreak": [2, "before"],
        "linebreak-style": "warn",
        "no-throw-literal": "warn"
    },
    "parser": "babel-eslint"
}
